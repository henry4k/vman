CFLAGS += -I../src
CFLAGS += -I../third-party/inih
CFLAGS += -I../third-party/tinythreadpp/source
CFLAGS += $(WARNINGS)

: |> !cflags |>


: foreach *.cpp |> !cxx |> %B.o

LDFLAGS += $(VMAN_LIB) $(INI_A) $(TINYTHREADPP_A)
: foreach *.o | $(INI_A) $(TINYTHREADPP_A) $(VMAN_LIB) |> !ldcxx |> %B$(BINARY_POSTFIX)

: test.sh.in |> !varsed-script |> test.sh
